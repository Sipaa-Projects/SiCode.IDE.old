<ui:FluentWindow x:Class="SiCode.IDE.Dialogs.LastCompileErrors"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SiCode.IDE.Dialogs"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Tabbed"
        ResizeMode="NoResize"
        Title="Compile Errors" Height="450" Width="450" Background="Black">
    <Grid>
        <Grid x:Name="TitleGrid" Height="48" VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <TextBlock Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI Variable" FontWeight="SemiBold" FontSize="18">Last compile errors</TextBlock>
        </Grid>
        <ui:TitleBar Height="48" ShowMaximize="False" ShowMinimize="False"></ui:TitleBar>
        <Grid x:Name="ContentGrid" Margin="0,48,0,0" VerticalAlignment="Stretch" Background="#32323253" HorizontalAlignment="Stretch">
            <TextBlock Background="Transparent" x:Name="compileErrors" TextWrapping="Wrap" Foreground="White" TextAlignment="Center">Compile errors here</TextBlock>
        </Grid>
    </Grid>
</ui:FluentWindow>
