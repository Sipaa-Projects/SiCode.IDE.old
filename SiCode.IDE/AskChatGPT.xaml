<Window x:Class="SiCode.IDE.AskChatGPT"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SiCode.IDE"
        mc:Ignorable="d"
        Title="Ask ChatGPT (early developement)" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="chatGptResponse" Margin="20, 20" HorizontalAlignment="Left" VerticalAlignment="Top" Text="ChatGPT response :"/>

        <Grid Height="48" VerticalAlignment="Bottom">
            <TextBox x:Name="questionBox" HorizontalAlignment="Left" Margin="20,0,0,0" Width="638"/>
            <Button Click="Button_Click" HorizontalAlignment="Right" Margin="0, 0, 20, 0" Content="Ask ChatGPT"/>
        </Grid>
    </Grid>
</Window>
